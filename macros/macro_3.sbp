'!FABMO!name:Home Tool
'!FABMO!description:Automatically Set Axis Zero for XY
&XBackoff = 0.375
&YBackoff = 0.875
&ZBackoff = 0.100

&xInput = 2
&yInput = 3
&zInput = 0

IF &zInput == 0 THEN GOTO skip_z
GOSUB HomeZ
skip_z:
	GOSUB HomeX
	GOSUB HomeY
	END

HomeX:
	ZX	
	PX,-96,3,&xInput
    JX,%(1)+&XBackoff
	VA,0,,,,,,0,,,,,
	RETURN
    
HomeY:
	ZY	
	PY,-48,3,&yInput
    JY,%(2)+&YBackoff
	VA,,0,,,,,,0,,,,
	RETURN
    
HomeZ:
	ZZ	
	PZ,10,1,5
    JZ,%(3)-&ZBackoff
	VA,,,0,,,,,,0,,,
	RETURN